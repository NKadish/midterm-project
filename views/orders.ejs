<!DOCTYPE html>
<html lang="en">
  <head>
    <%- include('partials/_head') %>
    <title>Orders</title>
  </head>

  <header>
    <%- include('partials/_header') %>
  </header>

  <body>
    <div>
      <h1>Current orders</h1>
      <section class="pending-orders">
        <% for (let order of orders) { %>
          <% if (order.status) { %>
          <ol>
            <li><%= order.id%></li>
            <li>Total: <%= order.cost%></li>
            <li>Order Placed on <%= order.placed_at%></li>

          </ol>
          <% } %>
        <% } %>
      </section>
    </div>

    <div>
    <h1>Previous orders</h1>
      <section class="prev-orders">
        <% for(let order of orders) { %>
          <% if (!order.status) { %>
          <ol>
            <li>Click To Expand</li>
            <li>Total: <%= order.cost%></li>
            <li>Order Placed on <%= order.placed_at%></li>
            <li>Completed on <%= order.picked_up_at%></li>


          </ol>
          <% } %>
        <% } %>



      </section>
    </div>
  </body>
</html>
